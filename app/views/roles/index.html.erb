<section class="content-header">
  <h1>
    Role Management
    <small>List</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
  </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header">
              <h3 class="box-title">List Role</h3>

              <div class="box-tools">
                <%= link_to "Add new", roles_new_path, class: 'btn btn-success' %>
              </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
              <table class="table table-hover">
                <tr>
                  <th>ID</th>
                  <th>Name</th>
                  <th>Description</th>
                  <th>Action</th>
                </tr>
                <% @roles.each do |f| %>
                  <tr>
                  <td><%= f.id %></td>
                  <td><%= f.name %></td>
                  <td><%= f.description %></td>
                  <td><%= link_to 'Edit', edit_role_path(f), class:'btn btn-primary' %><%= link_to 'Delete', role_path(f), class:'btn btn-danger', method: :delete, data: {confirm: 'Bạn có muốn xóa Quyền này không ?'} %></td>
                </tr>  
                <% end %>
              </table>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
      </div>
</section>